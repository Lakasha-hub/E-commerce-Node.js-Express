<head>
  <link rel="stylesheet" href="/css/register-login.css" />
</head>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-sm-12">
      <div class="card">
        <div class="card-header text-white">
          <h3 class="text-center">Login</h3>
        </div>
        <div class="card-body text-white">
          <!-- Login form -->
          <form>
            <div class="form-group">
              <label for="username">Email</label>
              <input type="text" class="form-control" id="email" required />
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input
                type="password"
                class="form-control"
                id="password"
                required
              />
            </div>
            <button type="submit" class="btn btn-primary btn-block">Log in</button>
          </form>
          <div class="mt-3 text-center">
            <a href="/restorePassword" class="text-white">Forgot password?</a>
          </div>
          <hr />
          <div class="text-center align-items-center justify-content-center">

            <p class="text-center">Or log in with:</p>
            <!-- Login with GitHub button -->
            <a
              href="/api/sessions/github"
              class="btn btn-dark btn-block text-center"
            >GitHub</a>
            <hr />
            <p class="text-center">Don't have an account? Register:</p>
            <!-- Register button -->
            <a href="/register" class="btn btn-secondary btn-block">Register</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script type="module" src="/js/login.js"></script>